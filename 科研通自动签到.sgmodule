#!name=科研通自动签到
#!desc=每日定时签到，模块参数可调整签到时间。\n打开科研通网站登录即可自动获取Cookie。
#!author=@RerrentLinden
#!update=2024-12-27
#!credit=由Claude辅助编写的自动签到模块
#!arguments=定时签到:0 9 * * *,禁用脚本:科研通获取Cookie,禁用MITM:hostname
#!arguments-desc=定时签到：Cron表达式，默认每天 09:00 执行，可自定义修改\n\n禁用脚本：禁用Cookie获取功能，输入 # 表示禁用\n\n禁用MITM：禁用MITM主机名，输入 # 表示禁用\n\n脚本来源：https://raw.githubusercontent.com/RerrentLinden/ProxyTools/refs/heads/main/sciencehub-script.js

[Script]
# 定时签到任务
科研通签到 = type=cron,cronexp="{{{定时签到}}}",wake-system=1,timeout=120,script-path=https://raw.githubusercontent.com/RerrentLinden/ProxyTools/refs/heads/main/sciencehub-script.js

# Cookie获取配置 (可通过参数禁用)
{{{禁用脚本}}} = type=http-request,pattern=^https:\/\/www\.ablesci\.com\/user\/signin$,script-path=https://raw.githubusercontent.com/RerrentLinden/ProxyTools/refs/heads/main/sciencehub-script.js,requires-body=0

[MITM]
{{{禁用MITM}}} = %APPEND% www.ablesci.com